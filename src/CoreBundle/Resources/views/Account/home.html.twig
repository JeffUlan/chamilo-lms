{% extends "@ChamiloCore/Layout/layout_one_col.html.twig" %}

{% block content %}
    {% autoescape false %}
        <h2>{{ 'Profile' | trans }}</h2>
        <h3> {{ user.firstname }} {{ user.lastname }} ({{ user.username }})</h3>

        <img src="{{ user | user_avatar }}?w=300&h=300&fit=crop">
        <br />

        <a href="{{ url('chamilo_core_account_edit') }}" class="btn btn-primary">
            {{ 'Edit profile' | trans }}
        </a>

        {{ user.competences }}
        {{ user.openarea }}
        {{ user.teach }}
        {{ user.diplomas }}
    {% endautoescape %}
{% endblock %}

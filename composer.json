            "main/gradebook/lib",
            "main/newscorm",
            "main/inc/lib",
            "main/install",
            "main/inc/lib/getid3",
            "main/survey"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jmontoyaa/phpqrcode"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jmontoyaa/silex-pagerfanta-provider"
        }

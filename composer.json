    "autoload": {
        "psr-0": {
            "Entity" : "main/inc/",
            "Gedmo": "vendor/gedmo/doctrine-extensions/lib",
            "ChamiloLMS" : "src/"
        },
        "classmap": [
            "main/auth",
            "main/admin",
            "main/cron/lang",
            "main/coursecopy",
